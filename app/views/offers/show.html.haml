.container
  = render partial: "shared/header"
  .projects-show
    .projects-show--header
      .projects-show--header__job-type
        %span.icon-job-type
          -# = @offer.job_type
      .projects-show--header__title
        %h1
          = @offer.title
      %h2.projects-show--header__company-name
        %span.company-logo
          -# = image_tag @product.company.logo
        %p.company-name
          = @offer.company.name
      .projects-show--header__image
        = image_tag @offer.image
    .projects-show--body
      .projects-show--body--main
        .descriptions
          %section.projects-show-main-section
            %header
              %h3 なにをやっているのか
              = @offer.what
            .section-body
              %ul.section-images
        .descriptions
          %section.projects-show-main-section
            %header
              %h3 なぜやるのか
              = @offer.why
            .section-body
              %ul.section-images
        .descriptions
          %section.projects-show-main-section
            %header
              %h3 どうやっているのか
              = @offer.how
      .projects-show--body--side
        .projects-show--body--side__action-btn
          .entry-btn
            %span 話を聞きに行きたい
          .entry-count
            %p 現在64人がエントリー済み
            %p エントリー状況は他のユーザーに公開されません
          .help-btn
            %span クリックすると何がおきるの？
          .bookmark-btn
            %span あとで見る
        .projects-show--body--side__map
          %h4 地図
          %p.address
            = @offer.company.address
